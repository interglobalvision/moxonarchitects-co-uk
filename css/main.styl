@require 'exec.css'
@require reset
@require misc
@require responsive

$color-yellow = #ff0
$color-transparent-yellow = rgba(255, 255, 0, 0.5)

$color-light-gray = rgb(204,204,204)
$color-dark-gray = rgb(104,104,104)

$color-transparent-gray = rgba(0,0,0,0.65)

// CLEAN CSS

body
  font-family: 'Executive-Thin', sans-serif
  font-size: 14px
  line-height: 1.5
  -webkit-text-stroke: .15px
  -webkit-min-device-pixel-ratio: 0

a, a:visited, a:active
  color: white

// NEW MENUS

#mobile-menu-holder, #mobile-menu-toggle, #mobile-menu-mask, #mobile-logo-holder
  display: none

.page-template-template-news
  .menu
    display: none

.menu
  li
    background: $color-transparent-gray
    margin: 1px 0 0 0
    padding: 5px 10px
    text-transform: uppercase
    font-size: 13px
    list-style:none
    &.menu-spacer
      height: 19px
    &.active
      color: $color-yellow

.current-project
  color: $color-yellow

.menu-toggle, #copy-toggle
  background: $color-transparent-gray
  margin: 1px 0 0 0
  padding: 5px 10px
  font-size: 13px
  height: 19px
  position: relative
  text-transform: uppercase
  &:hover
    cursor: pointer

#copy-toggle
  background-color: black

.menu-toggle-close
  display: none
.menu-toggle-open
  display: block

.active + project-copy
  display: block

.active
  .menu-toggle-close
    display: block
  .menu-toggle-open
    display: none

.menu-toggle-indicator
  position: absolute
  right: 10px
  top: 1px
  color: $color-yellow
  font-size: 16px

#main-menu
	position:fixed
	top: -1px
	left: 0px
	width:210px
	margin:0
	padding:0
	z-index:10001

// PROJECT SINGLE

#projects-menu
	position: fixed
	top: -1px
	left: 211px
	width: 250px
	margin: 0
	padding: 0
	z-index: 10001

#slide-list
  position: absolute
  right: 30px
  top: 4px
  li
    display: inline-block
    border-radius: 18px
    height: 9px
    width: 9px
    background-color: $color-light-gray
    margin-left: 5px
    &.current-slide
      background-color: white
    &:hover
      pointer: cursor
      background-color: $color-dark-gray

#project-copy-panel
	position: fixed
	top: -1px
	left: 462px
	width: 500px
	margin: 0
	padding: 0
	z-index: 10001

#project-copy
  display: none
  background: $color-transparent-gray
  margin: 1px 0 0 0
  padding: 5px 10px
  overflow-y: auto
  box-sizing: border-box
  p:last-child
    margin-bottom: 0px

// NEWS HIGHLIGHT

.page-template-template-news #menu-section-news
  color: $color-yellow

// OPEN COPY SECTIONS

.single-people #project-copy, .single-studio #project-copy, .page-template-template-contact #project-copy
  display: block

// CONTACT PAGE

#contact-copy-panel
	position: fixed
	top: -1px
	left: 211px
	width: 500px
	margin: 0
	padding: 0
	z-index: 10001

// BREAKPOINT 1
@media all and (max-width: 960px)

  #main-menu
  	width:190px

  // PROJECT SINGLE
  #projects-menu
  	left: 191px
  	width: 200px

  #project-copy-panel
  	left: 392px
  	width: 440px

  #contact-copy-panel
  	left: 191px
  	width: 440px

// FIRST TO MOBILE
@media all and (max-width: 832px)

  #masthead, #projects-menu
    display: none

  #mobile-menu-holder
    display: none
    position: fixed
    top: 0
    left: 0
    width: 100%
    height: 100%
    overflow-y: auto
    font-size: 16px
    text-transform: uppercase
    z-index: 99997

  #mobile-menu-header
    height: 24px
    background: $color-transparent-gray
    margin: 0
    padding: 5px 10px
    position: relative

  #mobile-menu-toggle
    display: block
    position: fixed
    top: -2px
    left: 0px
    height: 16px
    padding: 10px
    width: 19px
    z-index: 99999
    &:hover
      cursor: pointer
      path
        fill: $color-yellow
    path
      fill: white

  #mobile-menu
    display: none
    margin-top: 36px
    li
      background: $color-transparent-gray
      margin: 1px 0 0 0
      padding: 5px 10px
      position: relative
      list-style: none
      &:hover
        background: $color-transparent-yellow
      &.has-submenu
        padding: 0
        background: transparent

  #mobile-menu-mask
    position: fixed
    z-index: 99998
    top: 0
    left: 0
    right: 0
    height: 35px
    background: black

  .mobile-menu-spacer
    height: 24px

  .mobile-submenu-trigger
    background: $color-transparent-gray
    margin: 0
    padding: 5px 10px
    display: block
    &:hover
      background: $color-transparent-yellow
      cursor: pointer

  .menu-toggle-indicator
    top: 4px

  .mobile-submenu
    margin: 0
    display: none
    li
      padding: 5px 10px 5px 25px !important

  // PROJECT SINGLE
  #project-copy-panel, #contact-copy-panel
    left: 0
    width: 100%

  #copy-toggle
    height: 22px
    padding-left: 50px
    padding-top: 7px

  .load-item
    top: 34px !important

  .moxonlogogeneral, .moxonlogo
    display: none !important

  #slide-list
    top: 7px

  // SLIDESHOW
  #supersized
    top: 34px !important
    li
      top: 34px !important

  // MOBILE LOGO
  .home #mobile-logo-holder
    z-index: 9
    position: fixed
    display: table
    top: 0
    left: 0
    width: 100%
    height: 100%
    text-align: center

  #mobile-logo-holder-inner
    display: table-cell
    vertical-align: middle

// MOBILE ONLY
@media all and (max-width: 480px)

  #slide-list
    display: none


