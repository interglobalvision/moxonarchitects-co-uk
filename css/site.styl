@import "fonts/executive"

@import "kouto-swiss"
@import "helpers"
@import "swiper"

// ******************************************************

// FONTS

// ******************************************************

// ICONS FONTS

// ** https://genericons.com WP icon font set
// @import "fonts/icons/genericons"

// ** minimal version of Google Materialize UI icons. check the styl for usage
@import "fonts/icons/materialize-min"

// ** full set of Google Materialize. https://design.google.com/icons/
// @import "fonts/icons/materialize"

// ******************************************************

meyer-reset()
box-sizing-reset()
normalize()

// ******************************************************

// GRID

$cols = 12
$col = 90px
$gutter = 16px

.container
  margin: 0 auto
  width: ($col * $cols)+($gutter * $cols)

.row
  clearfix()

.col
  float: left
  margin-left: ($gutter/2)
  margin-right: ($gutter/2)
  min-height: 1px

for col in 1..$cols
  .col-{col}
    width: ( col * $col ) + ( ( col - 1 ) * $gutter )

// ******************************************************

// VARIABLES

$golden-ratio = 1.61803398875

$margin-small = ($gutter)
$margin-tiny = ($gutter / 2)
$margin-micro = ($gutter / (2 * $golden-ratio))
$margin-basic = ($gutter * 2)
$margin-mid = ($gutter * 3.5)
$margin-large = ($gutter * 5)

$font-size-basic = 13px
$font-size-larger = 1.3rem
$font-size-h3 = golden-ratio(1rem , .7)
$font-size-h2 = golden-ratio(1rem , 1.5)
$font-size-h1 = golden-ratio(1rem , 2)

$font-leading-basic = 1.35
$font-leading-tighter = 1.15
$font-leading-larger = 1.45

$font-tracking-basic = 0.001em
$font-tracking-wider = 0.05em

$color-black-soft = rgb(14, 14, 14)
$color-black = black
$color-white-soft = rgb(253, 253, 253)

$color-yellow = #ff0
$color-gray-transparent = rgba(0, 0, 0, .65)
$color-dark-gray-transparent = rgba(0, 0, 0, .8)

// ******************************************************

// TYPOGRAPHY

html
  font-family: 'Executive-Thin', sans-serif
  font-size: $font-size-basic
  letter-spacing: $font-tracking-basic
  &.stop-scroll
    overflow: hidden

body
  line-height: $font-leading-basic

  // HTML ELEMENT STYLING

h1, .font-size-h1
  font-size: $font-size-h1
  line-height: $font-leading-tighter

h2
  font-size: $font-size-h2
  line-height: $font-leading-tighter

h3
  font-size: $font-size-h3

p
  margin-bottom: 1rem

  // FONT RULES

.font-italic
  font-style: italic

.font-bold
  font-weight: bold

.font-small-caps
  font-size: 0.85em
  text-transform: uppercase

.font-tracking-wider
  letter-spacing: $font-tracking-wider

.font-capitalize
  text-transform: capitalize

.font-uppercase
  text-transform: uppercase

.font-color-white
  color: $color-white-soft

.font-color-active, .font-color-yellow
  color: $color-yellow

.font-copy
  font-size: $font-size-larger
  line-height: $font-leading-larger

blockquote
  margin-left: $margin-basic

  // TEXT RULES

.text-overflow-ellipsis
  overflow: ellipsis

.text-align-left
  text-align: left

.text-align-right
  text-align: right

.text-align-center
  text-align: center

  // LINKS

a,
a:active,
a:visited
  color: inherit
  text-decoration: none

// ******************************************************

// BASIC

html, body
  background-color: $color-black
  color: $color-black

img
  max-width: 100%
  height: auto
  max-height: 100%
  width: auto

.image-cover-holder
  overflow: hidden
  position: relative
  height: 100%
  width: 100%

.image-cover
  max-height: none
  max-width: none
  position: absolute

.only-desktop
  display: initial

.only-mobile
  display: none

// ******************************************************

// MARGINS AND PADDING

  // MARGIN TOP

.margin-top-micro
  margin-top: $margin-micro

.margin-top-tiny
  margin-top: $margin-tiny

.margin-top-small
  margin-top: $margin-small

.margin-top-basic
  margin-top: $margin-basic

.margin-top-mid
  margin-top: $margin-mid

.margin-top-large
  margin-top: $margin-large

  // MARGIN BOTTOM

.margin-bottom-micro
  margin-bottom: $margin-micro

.margin-bottom-tiny
  margin-bottom: $margin-tiny

.margin-bottom-small
  margin-bottom: $margin-small

.margin-bottom-basic
  margin-bottom: $margin-basic

.margin-bottom-mid
  margin-bottom: $margin-mid

.margin-bottom-large
  margin-bottom: $margin-large

  // PADDING TOP

.padding-top-micro
  padding-top: $margin-micro

.padding-top-tiny
  padding-top: $margin-tiny

.padding-top-small
  padding-top: $margin-small

.padding-top-basic
  padding-top: $margin-basic

.padding-top-mid
  padding-top: $margin-mid

.padding-top-large
  padding-top: $margin-large

  // PADDING BOTTOM

.padding-bottom-micro
  padding-bottom: $margin-micro

.padding-bottom-tiny
  padding-bottom: $margin-tiny

.padding-bottom-small
  padding-bottom: $margin-small

.padding-bottom-basic
  padding-bottom: $margin-basic

.padding-bottom-mid
  padding-bottom: $margin-mid

.padding-bottom-large
  padding-bottom: $margin-large

// ******************************************************

// MENU

menuBackgrounds()
  background-color: $color-gray-transparent
  padding: 6px 8px
  margin-bottom: 1px
  margin-right: 1px

#menus
  position: fixed
  top: 0
  left: 0
  z-index: 100

.menu-column
  float: left
  width: 190px
  .menu-column-top:after
    content: ''
    background-image: url("data:image/svg+xml; utf8, <svg xmlns='http://www.w3.org/2000/svg' width='50' height='51.556' viewBox='-17.5 -18.044 50 51.556'><path fill='#FF0' d='M10.605-18.044V4.729H32.5v5.824H10.605v22.959h-6.2V10.553H-17.5V4.729H4.403v-22.773h6.202z'/></svg>")
    display: block
    background-size: 10px 10px
    width: 10px
    height: 10px
    background-position: center center
    background-repeat: no-repeat
    position: absolute
    right: 8px
    top: 9px
  &.menu-active
    .menu-column-top:after
      background-image: url("data:image/svg+xml; utf8, <svg xmlns='http://www.w3.org/2000/svg' width='50' height='51.556' viewBox='-17.5 -18.044 50 51.556'><path fill='#FF0' d='M-17.5 4.729h50v5.824h-50z'/></svg>")

.menu-column-top
  cursor: pointer
  position: relative
  menuBackgrounds()

.menu-column-content
  li
    menuBackgrounds()

.menu-background
  menuBackgrounds()

#main-content
  width: 500px

// ******************************************************

// LOGOS

#desktop-logo-overlay
  position: fixed
  bottom: 0
  right: 0
  padding: $margin-small
  z-index: 90
  svg
    width: 450px
    height: 68px
    path
      fill: $color-white-soft

// ******************************************************

// PAGES

#map,
#map-canvas
  height: 100vh

// ******************************************************

// NEWS

#news
  min-height: 100vh
  max-width: 1800px

.news-masonry-item
  width: calc( 100% / 3)
  float: left

.news-post
  position: relative
  padding-bottom: 1px
  padding-right: 1px
  .news-post-title
    font-size: $font-size-h2
    line-height: $font-leading-tighter
    position: absolute
    top: 0
    left: 0
    width: 100%
    height: 100%
    color: $color-white-soft
    padding: $margin-small
    background-image: radial-gradient(ellipse at center,  rgba(190,190,190,0.8) 0%,rgba(150,150,150,0.5) 100%)
    opacity: 0
    &:hover
      opacity: 1
  .attachment-news-thumb
    display: block

.news-post-content
  display: none

#news-post-shim
  padding-bottom: 1px
  padding-right: 1px
  min-height: 3rem
  padding-bottom: 1rem

#pagination
  width: 100%
  color: $color-white-soft

// OVERLAY

#news-overlay
  position: fixed
  background-color: $color-dark-gray-transparent
  top: 0
  left: 0
  width: 100%
  height: 100vh
  overflow-y: scroll
  padding: $margin-basic
  z-index: 110
  display: none

#news-overlay-close
  position: fixed
  top: 0
  right: 0
  padding: $margin-basic
  z-index: 120
  line-height: 0

#news-overlay-content
  max-width: 650px
  margin: 0 auto
  .font-copy
    *:first-child
      margin-top: 0
  h2
    font-size: $font-size-h1
  p
    margin-left: $margin-basic
    margin-bottom: 2rem
  img
    margin-top: 3rem
    margin-bottom: 3rem
  .wp-caption
    width: 100% !important
    margin-top: 3rem
    margin-bottom: 3rem
    .wp-caption-text
      font-size: 1rem
      margin-left: 0
      margin-top: $margin-micro
    img
      max-width: 100%
      height: auto
      margin-bottom: 0

// ******************************************************

// PROJECT TYPE ARCHIVE

.project-type-archive-post
  position: relative
  min-height: 2.5rem

.project-type-archive-post-title-holder
  position: absolute
  bottom: 0
  left: 0
  width: 100%

.project-type-archive-post-title
  menuBackgrounds()
  margin-right: 0
  &:after
    content: ''
    background-image: url("data:image/svg+xml; utf8, <svg xmlns='http://www.w3.org/2000/svg' width='50' height='51.556' viewBox='-17.5 -18.044 50 51.556'><path fill='#FF0' d='M10.605-18.044V4.729H32.5v5.824H10.605v22.959h-6.2V10.553H-17.5V4.729H4.403v-22.773h6.202z'/></svg>")
    display: block
    background-size: 10px 10px
    width: 10px
    height: 10px
    background-position: center center
    background-repeat: no-repeat
    position: absolute
    right: 8px
    top: 9px
  &.menu-active:after
    background-image: url("data:image/svg+xml; utf8, <svg xmlns='http://www.w3.org/2000/svg' width='50' height='51.556' viewBox='-17.5 -18.044 50 51.556'><path fill='#FF0' d='M-17.5 4.729h50v5.824h-50z'/></svg>")

// ******************************************************

// SINGLE

.swiper-pagination-bullet
  display: inline-block
  border-radius: 20px
  height: 8px
  width: 8px
  background-color: $color-white-soft
  margin-left: 5px
  &.swiper-pagination-bullet-active
    background-color: $color-yellow
  &:hover
    background-color: $color-yellow

// SINGLE PROJECT

.single-project
  #main-content
    .menu-column-top:after
      font-size: 1rem
      content: 'INFO'
      padding: 6px 8px
      color: $color-yellow
      background-image: none
      top: 0
      right: 0
      width: auto
      height: auto
    .menu-column-content
      display: none

#gallery-pagination
  position: absolute
  top: 5px
  right: 46px

// IMAGES

#images
  height: 100vh
  display: flex
  align-items: flex-end
  justify-content: center

#project-gallery
  width: 100%
  height: 100vh

.gallery-image
  display: block

.gallery-image-large,
.gallery-image-huge
  display: none

@media screen and (min-width: 1200px)

  .gallery-image-large
    display: block

  .gallery-image-normal
    display: none

@media screen and (min-width: 1800px)

  .gallery-image-huge
    display: block

  .gallery-image-large
    display: none

// ******************************************************

// PEOPLE

article.people
  .wp-post-image
    display: block
    float: right

// ARCHIVE

.post-type-archive-people
  .people-header
    position: relative
    &:after
      content: ''
      background-image: url("data:image/svg+xml; utf8, <svg xmlns='http://www.w3.org/2000/svg' width='50' height='51.556' viewBox='-17.5 -18.044 50 51.556'><path fill='#FF0' d='M10.605-18.044V4.729H32.5v5.824H10.605v22.959h-6.2V10.553H-17.5V4.729H4.403v-22.773h6.202z'/></svg>")
      display: block
      background-size: 10px 10px
      width: 10px
      height: 10px
      background-position: center center
      background-repeat: no-repeat
      position: absolute
      right: 0px
      top: 4px
  article.people
    padding-bottom: 0px
    &.active
      .people-header:after
        background-image: url("data:image/svg+xml; utf8, <svg xmlns='http://www.w3.org/2000/svg' width='50' height='51.556' viewBox='-17.5 -18.044 50 51.556'><path fill='#FF0' d='M-17.5 4.729h50v5.824h-50z'/></svg>")
  .people-copy
    display: none
    padding-bottom: $margin-tiny

// ******************************************************

// MEDIA QUERIES

@media screen and (max-width: 880px)

  @import "responsive/desktop-mid"

@media screen and (max-width: 800px)

  @import "responsive/mobile"